<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="assignment.LoginController" prefWidth="800" prefHeight="600" style="-fx-background-color: #f5f5f5;">
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40; -fx-background-radius: 10; -fx-background-color: #ffffff; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 0);">
            <Label text="Academic Reporting System" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333333; -fx-padding: 0 0 20 0;"/>
            <TextField fx:id="usernameField" promptText="Username" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-padding: 10; -fx-background-radius: 5; -fx-background-color: #f0f0f0;"/>
            <PasswordField fx:id="passwordField" promptText="Password" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-padding: 10; -fx-background-radius: 5; -fx-background-color: #f0f0f0;"/>
            <Button fx:id="loginButton" text="Login" onAction="#handleLogin" style="-fx-background-color: #4CAF50; -fx-font-size: 16px; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);"/>
        </VBox>
    </center>
</BorderPane>
